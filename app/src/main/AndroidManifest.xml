        <activity
            android:name=".ui.activities.ActualVisitReportActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PulpoUltra" />
        <activity
            android:name=".ui.activities.ProductsReportActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PulpoUltra" />
        <activity
            android:name=".ui.activities.AccountsReportActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PulpoUltra" />
        <activity
            android:name=".ui.activities.PlanningActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PulpoUltra" />
        <activity
            android:name=".ui.activities.ReportsActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PulpoUltra" />
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
